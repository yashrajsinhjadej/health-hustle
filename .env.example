# Health Hustle API Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_url_here

# ========================================
# JWT CONFIGURATION
# ========================================
# Secret key for JWT token signing (use a strong, random string)
# Generate one: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ========================================
# SMS PROVIDER CONFIGURATION
# ========================================
# Choose your SMS provider: 'msg91', 'twilio', or 'simulation'
# - msg91: Production SMS service for India (recommended)
# - twilio: Alternative SMS service (international)
# - simulation: Development mode (logs SMS to console)
SMS_PROVIDER=simulation

# ========================================
# MSG91 CONFIGURATION (Recommended for India)
# ========================================
# Your MSG91 Auth Key (found in MSG91 dashboard)
MSG91_AUTH_KEY=your_msg91_auth_key_here

# Your MSG91 Sender ID (6 character alphanumeric, e.g., HLTHHS)
MSG91_SENDER_ID=HLTHHS

# Your MSG91 Template ID for OTP (optional, recommended)
# If provided, uses MSG91's OTP API, otherwise sends as regular SMS
MSG91_TEMPLATE_ID=your_template_id_here

# MSG91 Route (4 = Transactional, recommended for OTP)
MSG91_ROUTE=4

# MSG91 Country Code (91 = India)
MSG91_COUNTRY=91

# ========================================
# TWILIO SMS CONFIGURATION (Optional - can be removed)
# ========================================
# Your Twilio Account SID (found in Twilio Console)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio Auth Token (found in Twilio Console)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Your Twilio Phone Number (format: +1234567890)
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# EMAIL CONFIGURATION (for password reset)
# ========================================
# Your email address (Gmail, Outlook, etc.)
EMAIL_USER=your_email@gmail.com

# Your email password or app-specific password
# For Gmail: Use App Password if 2FA is enabled
# Generate App Password: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD=your_email_password_or_app_password

# ========================================
# SERVER CONFIGURATION
# ========================================
# Node environment (development/production)
NODE_ENV=development

# Server port (optional, defaults to 3000)
PORT=3000

# ========================================
# OTP CONFIGURATION
# ========================================
# OTP expiry time in minutes (how long OTP remains valid)
OTP_EXPIRY_MINUTES=5

# Maximum OTP verification attempts before blocking
OTP_MAX_ATTEMPTS=3

# ========================================
# PASSWORD & SECURITY CONFIGURATION
# ========================================
# Bcrypt salt rounds for password hashing (higher = more secure but slower)
# Recommended: 10-14, Default: 12
BCRYPT_SALT_ROUNDS=12

# Minimum password length for admin accounts
# Default: 6 (recommended: 8 or higher)

# ========================================
# RATE LIMITING CONFIGURATION
# ========================================
# Authentication rate limits (requests per minute)
AUTH_OTP_SEND_LIMIT=5
AUTH_OTP_VERIFY_LIMIT=3

# User routes rate limit (requests per minute)
USER_ROUTES_LIMIT=60

# Health routes rate limit (requests per minute)
HEALTH_ROUTES_LIMIT=50

# Admin routes rate limit (requests per minute)
ADMIN_ROUTES_LIMIT=100

# Rate limiting window in seconds (default: 60 seconds)
RATE_LIMIT_WINDOW_SECONDS=60

# ========================================
# AWS S3 CONFIGURATION
# ========================================
# AWS Region for S3 bucket
AWS_REGION=your-region

# AWS Access Key ID
AWS_ACCESS_KEY_ID=your_access_key

# AWS Secret Access Key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Bucket Name
AWS_BUCKET_NAME=your-bucket-name

# ========================================
# REDIS CONFIGURATION
# ========================================
# Redis URL for rate limiting
REDIS_URL=redis://username:password@localhost:6379

# ========================================
# EXTERNAL APIS
# ========================================
# Gemini API Key for calorie service
GEMINI_API_KEY=your_gemini_api_key

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# CORS origin (comma-separated for multiple origins)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# JWT token expiration time (optional, defaults to 24h)
# JWT_EXPIRES_IN=24h

# MongoDB connection pool size (optional, defaults to 10)
# MONGODB_POOL_SIZE=10

# ========================================
# DEPLOYMENT NOTES
# ========================================
# For Vercel deployment:
# 1. Add these variables in Vercel dashboard
# 2. Set NODE_ENV=production
# 3. Ensure MongoDB Atlas allows connections from Vercel
# 4. Test all endpoints after deployment

# ========================================
# API CONFIGURATION
# ========================================
# API Base URL (set based on environment)
API_BASE_URL=http://localhost:3000

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# Frontend URL for password reset links and redirects
# Production: https://your-admin-panel.vercel.app
# Development: http://localhost:3001
FRONTEND_URL=http://localhost:3001

