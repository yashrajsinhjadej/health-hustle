# Health Hustle API Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/health-hustle?retryWrites=true&w=majority

# ========================================
# JWT CONFIGURATION
# ========================================
# Secret key for JWT token signing (use a strong, random string)
# Generate one: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# ========================================
# TWILIO SMS CONFIGURATION
# ========================================
# Your Twilio Account SID (found in Twilio Console)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Your Twilio Auth Token (found in Twilio Console)
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Your Twilio Phone Number (format: +1234567890)
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# SERVER CONFIGURATION
# ========================================
# Node environment (development/production)
NODE_ENV=development

# Server port (optional, defaults to 3000)
PORT=3000

# ========================================
# OTP CONFIGURATION
# ========================================
# OTP cooldown time in seconds (time to wait before requesting new OTP)
OTP_COOLDOWN_SECONDS=25

# OTP expiry time in minutes (how long OTP remains valid)
OTP_EXPIRY_MINUTES=5

# Maximum OTP verification attempts before blocking
OTP_MAX_ATTEMPTS=3

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# CORS origin (comma-separated for multiple origins)
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# JWT token expiration time (optional, defaults to 24h)
JWT_EXPIRES_IN=24h

# MongoDB connection pool size (optional, defaults to 10)
# MONGODB_POOL_SIZE=10

# ========================================
# DEPLOYMENT NOTES
# ========================================
# For Vercel deployment:
# 1. Add these variables in Vercel dashboard
# 2. Set NODE_ENV=production
# 3. Ensure MongoDB Atlas allows connections from Vercel
# 4. Test all endpoints after deployment
